rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isSignedIn();
      // Users can only write their own profile
      allow create, update: if isSignedIn() && isOwner(userId);
      // No one can delete users
      allow delete: if false;
    }
    
    // Books collection
    match /books/{bookId} {
      // Anyone authenticated can read all books
      allow read: if isSignedIn();
      
      // Anyone authenticated can create a book
      allow create: if isSignedIn() && 
        request.resource.data.ownerId == request.auth.uid;
      
      // Owner can update their book, OR anyone can update just the likedBy field
      allow update: if isSignedIn() && (
        resource.data.ownerId == request.auth.uid ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy']))
      );
      
      allow delete: if isSignedIn() && 
        resource.data.ownerId == request.auth.uid;
    }
    
    // Swaps collection
    match /swaps/{swapId} {
      // Only sender and receiver can read the swap
      allow read: if isSignedIn() && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId);
      
      // Anyone authenticated can create a swap
      allow create: if isSignedIn() && 
        request.resource.data.senderId == request.auth.uid;
      
      // Only sender and receiver can update the swap
      // Sender can cancel, receiver can accept/reject
      allow update: if isSignedIn() && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId);
      
      // Only the sender can delete the swap
      allow delete: if isSignedIn() && 
        request.auth.uid == resource.data.senderId;
    }
    
    // Chat rooms
    match /chatRooms/{roomId} {
      // Only participants can read the chat room
      allow read: if isSignedIn() && 
        request.auth.uid in resource.data.participants;
      
      // Only participants can create/update chat room
      allow create, update: if isSignedIn() && 
        request.auth.uid in request.resource.data.participants;
      
      // No one can delete chat rooms
      allow delete: if false;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Only participants can read messages
        allow read: if isSignedIn() && 
          request.auth.uid in get(/databases/$(database)/documents/chatRooms/$(roomId)).data.participants;
        
        // Only participants can create messages
        allow create: if isSignedIn() && 
          request.auth.uid in get(/databases/$(database)/documents/chatRooms/$(roomId)).data.participants &&
          request.resource.data.senderId == request.auth.uid;
        
        // Only the sender or receiver can mark as read
        allow update: if isSignedIn() && 
          request.auth.uid in get(/databases/$(database)/documents/chatRooms/$(roomId)).data.participants;
        
        // No one can delete messages
        allow delete: if false;
      }
    }
  }
}
