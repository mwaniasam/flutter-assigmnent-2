rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Book images
    match /books/{bookId}/{allPaths=**} {
      // Anyone authenticated can read book images
      allow read: if isSignedIn();
      
      // Only authenticated users can upload book images
      // File size limited to 5MB
      // Only allow image files
      allow write: if isSignedIn() && 
        request.resource.size < 5 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }
    
    // User profile images
    match /users/{userId}/profile/{fileName} {
      // Anyone authenticated can read profile images
      allow read: if isSignedIn();
      
      // Only the user can upload their own profile image
      // File size limited to 2MB
      allow write: if isSignedIn() && 
        request.auth.uid == userId &&
        request.resource.size < 2 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }
  }
}
